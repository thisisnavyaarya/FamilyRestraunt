@model Product
@{
    ViewBag.Title= $"{ViewBag.Operation} Menu Item";
}
<h1>@ViewBag.Operation Menu Item</h1>
<form asp-action="AddEdit" asp-controller="Product" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" asp-for="CategoryId" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span></div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Stock">Quantity in stock</label>
            <input asp-for="Stock" class="form-control" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="imageUpload">Upload Image</label>
            <input type="file" id="imageUpload" name="ImageFile" class="form-control" asp-for="ImageFile" />
        </div>
        <div class="row">
            <div class="col">
                @foreach (Category category in ViewBag.Categories)
                {
                    <div class="form-check">
                        @{
                            bool isChecked = Model.CategoryId == category.Id;
                        }
                        <input type="radio" class="form-check-input" id="@category.Id" name="catId" value="@category.Id" @(isChecked ? "checked" : "") /> @category.Name
                    </div>
                }
            </div>
                <div class="col">
                    @foreach (Ingredient ingredient in ViewBag.Ingredients)
                    {
                        <div class="form-check">
                            @{
                                bool isChecked = Model.ProductIngredients != null && Model.ProductIngredients.Any(pi => pi.IngredientId == ingredient.IngredientId);
                            }
                            <input type="checkbox" class="form-check-input" id="@ingredient.IngredientId" name="ingredientIds" value="@ingredient.IngredientId" 
                            @(isChecked ? "checked" : "") />
                            <label class="form-check-label" for="@ingredient.IngredientId">@ingredient.Name</label>
                        </div>
                    }
                </div>
                </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-action="Index" asp-controller="Product" class="btn btn-outline-dark">Cancel</a>
</form>
